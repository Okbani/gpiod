#!/bin/sh
#
# Starts gpiod.
#

RUNDIR=/var/run
SBINDIR=/usr/sbin
BINDIR=/usr/bin

start() {
	printf "Starting gpiod: "
	start-stop-daemon -S -q --exec ${SBINDIR}/gpiod -- -D -p ${RUNDIR}/gpiod.pid
	[ $? == 0 ] && echo "OK" || echo "FAILED"
}
stop() {
	printf "Stopping gpiod: "
	${SBINDIR}/gpiod -K -p ${RUNDIR}/gpiod.pid
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

